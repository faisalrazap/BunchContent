<div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 reset-password-container'>
  <div class='panel panel-info'>
    <div class='panel-heading'>
      <div class='panel-title'>Change your password</div>
    </div>

    <div class='panel-body reset-password-form'>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class='input-group field'>
          <span class='input-group-addon'><i class='fa fa-lock'></i></span>
          <%= f.password_field :password, autocomplete: 'off', placeholder: 'New password', class: 'form-control' %>
        </div>

        <div class='input-group field'>
          <span class='input-group-addon'><i class='fa fa-lock'></i></span>
          <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm new password', class: 'form-control' %>
        </div>

        <div class='form-group reset-password-btn'>
          <%= f.submit 'Change my password', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

  </div>
</div>

