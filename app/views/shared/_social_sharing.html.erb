<div class='row'>
  <div class='col-xs-6 col-sm-6 col-md-6'>
    <span class='btn btn-facebook custom-button pull-right'>
      Share on <i class='fa fa-facebook'></i>
    </span>
  </div>
  <div class='col-xs-6 col-sm-6 col-md-6'>
    <a href="https://twitter.com/share?text=#{ URI::encode(twitter_text) }&url=#{ url.gsub('https://', 'http://') }" target='_blank'>
      <span class='btn btn-xlarge btn-twitter custom-button pull-left'>
        Share on <i class='fa fa-twitter'></i>
      </span>
    </a>
  </div>
</div>
<div class='clear'></div>

<script type='text/javascript'>
  $(document).ready(function(){
    $('.btn-facebook').click(function(){
      FB.ui({
        method: 'feed',
        name: '<%= name %>',
        link: '<%= url %>',
        picture: '<%= photo_url %>',
        description: '<%= description %>',
        caption: 'http://contentbunch.com',
        display: 'popup'
      }, function(response) {
        if (response && response.post_id) {
        }
      });
    });
  });
</script>
